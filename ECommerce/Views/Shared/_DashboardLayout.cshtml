<body>
    <section id="container">
        <!-- **********************************************************************************************************************************************************
            TOP BAR CONTENT & NOTIFICATIONS
            *********************************************************************************************************************************************************** -->
        <!--header start-->
        <header class="header black-bg">
            <div class="sidebar-toggle-box">
                <div class="fa fa-bars badge" data-placement="right" data-original-title="Toggle Navigation"></div>
            </div>

            <!--logo start-->
            <a href="index.html" class="logo"><b>MOBILE<span>SHOP</span></b></a>
            <!--logo end-->
            <!--Notification Start-->
            <!--Notification End-->
            
            <div class="top-menu">
                <ul class="nav pull-right top-menu">

                    <li><a class="logout" @Html.ActionLink("Logout", "Index", "Home")</a></li>
                </ul>
            </div>
        </header>
        <!--header end-->
        <!-- **********************************************************************************************************************************************************
            MAIN SIDEBAR MENU
            *********************************************************************************************************************************************************** -->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <!-- sidebar menu start-->
                <ul class="sidebar-menu" id="nav-accordion">
                    <p class="centered"><a href="#"><img src="~/Content/DashboardLinkFile/Images/belal.jpg" class="img-circle" width="80"></a></p>


                    <h5 class="centered">Belal Hossain</h5>
                    <li class="mt">
                        <h3>@Html.ActionLink("Dashboard", "Index", "Dashboard")</h3>
                    </li>
                   
                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="fa fa-cogs"></i>
                            <span>Page Management</span>
                        </a>
                        <ul class="sub">
                            <li>@Html.ActionLink("Role Management", "Index", "Role")</li>
                            <li>@Html.ActionLink("Add New Product", "Create", "Product")</li>
                            <li>@Html.ActionLink("Contact Information", "Index", "ContactInformation")</li>
                            <li>@Html.ActionLink(" Mobile Brands List", "Index", "MobileBrand")</li>
                         
                        </ul>
                    </li>
                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="fa fa-cogs"></i>
                            <span>Sales Report</span>
                        </a>
                        <ul class="sub">
                            <li>@Html.ActionLink("Order List", "Index", "Orders")</li>
                            <li>@Html.ActionLink("Shopping Cart", "Index", "ShoppingCart")</li>
                            <li>@Html.ActionLink("Payment", "Index", "Payment")</li>
                            <li><a href="#">Stock</a></li>
                            <li><a href="#">Report</a></li>
                            <li><a href="#">Sold Item</a></li>
                            <li><a href="#">Best Sell</a></li>
                        </ul>
                    </li>
               
                    <li>
                        @Html.ActionLink("Mail", "Index", "ContactInformation")
                    </li>
                    <li>
                       @Html.ActionLink("GoogleMaps", "Index", "Dashboard")                        
                    </li>
                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->
        <!-- **********************************************************************************************************************************************************
            MAIN CONTENT
            *********************************************************************************************************************************************************** -->
        <!--main content start-->
        <section id="main-content" style="background-color:white;">
            <section class="wrapper site-min-height">
               
                <div class="row mt">
                    <div class="col-lg-12">
                       
                        @RenderBody()
                    </div>
                </div>
            </section>
            <!-- /wrapper -->
        </section>
        <!-- /MAIN CONTENT -->
        <!--main content end-->
        <!--footer start-->
        <footer class="site-footer">
            <div class="text-center">
                <p>
                    &copy; Copyrights <strong>Dashio</strong>. All Rights Reserved
