<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!--external css-->
    <link href="~/Content/DashboardLinkFile/Fonts/font-awesome.css" rel="stylesheet" />


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">

        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Mobile Shop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="active">@Html.ActionLink("Home", "Index", "Home")                                 
                    </li>
                    <li>@Html.ActionLink("Mobile Gallery", "Index", "Product")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact Us", "Create", "ContactInformation")</li>
                    <li>@Html.ActionLink("Dashboard", "Index", "Dashboard")</li>
                    



                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <br />



    <div class="container body-content">
        @RenderBody()
        <hr />

    </div>
    <footer class="site-footer" style="background: #4ECDC4;color: #fff;padding: 5px 0; position:fixed; height:60px; width:100%; bottom:0px;">
        <div class="text-center">
            <p>
            <p>&copy; @DateTime.Now.Year - All Right Reserverd <b>E-COMMERCE</b></p>
            </p>
            <div class="credits">

                All Credit Belongs to <a href="https://www.idb-bisew.org">IDB-BISEW</a>
            </div>
            <a href="blank.html#" class="go-top">
                <i class="fa fa-angle-up"></i>
            </a>
        </div>
    </footer>




    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
